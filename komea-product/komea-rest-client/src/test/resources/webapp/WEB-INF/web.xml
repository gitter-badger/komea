<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Komea</display-name>
	<description>Komea</description>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:/spring/application-context-test.xml</param-value>
	</context-param>


	<session-config>  <!-- 10 minutes -->
		<session-timeout>10</session-timeout>
	</session-config>


	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/spring/dispatcher-servlet-test.xml</param-value>
		</init-param>

	</servlet>
	<!-- <servlet-mapping> <servlet-name>dispatcher</servlet-name> <url-pattern>/p/*</url-pattern> 
		</servlet-mapping> -->
	<servlet>
		<servlet-name>rest</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/spring/rest-servlet-test.xml</param-value>
		</init-param>

	</servlet>
	<servlet-mapping>
		<servlet-name>rest</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/static/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/views/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>cors</filter-name>
		<filter-class>org.komea.product.web.rest.api.CorsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>cors</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<session-config>
		<session-timeout>300</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	<!-- <error-page> <exception-type>java.lang.Throwable</exception-type> <location>/p/error.html</location> 
		</error-page> <error-page> <error-code>500</error-code> <location>/p/error.html</location> 
		</error-page> <error-page> <error-code>404</error-code> <location>/p/error.html</location> 
		</error-page> -->
</web-app>